{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "spacing": {
      "blockGap": null,
      "margin": true,
      "padding": true,
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ]
    },
    "color": {
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#563500"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "#c1a56c"
        }
      ]
    },
    "typography": {
      "fluid": {
        "minViewportWidth": "375px",
        "maxViewportWidth": "1280"
      },
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "22px",
          "name": "Medium",
          "fluid": {
            "min": "18px"
          }
        },
        {
          "slug": "large",
          "size": "28px",
          "name": "Large",
          "fluid": {
            "min": "20px"
          }
        },
        {
          "slug": "extralarge",
          "size": "35px",
          "name": "Extra Large",
          "fluid": {
            "min": "22px"
          }
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "'Cormorant Infant', serif",
          "name": "Cormorant Infant",
          "slug": "cormorant-infant"
        }
      ]
    },
    "layout": {
      "wideSize": "1920px",
      "contentSize": "1280px"
    }
  },
  "styles": {
    "typography": {
      "fontSize": "16px"
    },
    "blocks": {
      "core/paragraph": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "lineHeight": "1.75"
        }
      }
    }
  }
}
